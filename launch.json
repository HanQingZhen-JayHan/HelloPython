  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/hello_world.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest Debuger",
      "type": "debugpy",
      "request": "launch",
      "args": ["-k", "test"],
      "module": "pytest"
    }
  ]
}
